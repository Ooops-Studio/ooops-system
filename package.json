{
	"name": "@oopsstudio/system",
	"version": "0.0.0",
	"description": "Modular, framework-agnostic infrastructure system unifying runtime logic, SDK utilities, and framework adapters for deterministic, composable web development.",
	"private": true,
	"type": "module",
	"license": "MIT",
	"engines": {
		"node": ">=20"
	},
	"packageManager": "pnpm@10.20.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/Ooops-Studio/ooops-system.git"
	},
	"scripts": {
		"typecheck": "tsc -p tsconfig.base.json --noEmit",
		"lint": "eslint .",
		"test": "vitest run --coverage",
		"build": "pnpm -r -F './packages/**' exec tsup",
		"size": "pnpm -r -F './packages/**' exec size-limit",
		"depcruise": "depcruise --config .dependency-cruiser.cjs packages/**/src",
		"publint": "pnpm -r -F './packages/**' exec publint",
		"attw": "pnpm -r --filter \"./packages/*\" exec attw --pack --ignore-rules no-resolution --ignore-rules cjs-resolves-to-esm",
		"changeset": "changeset",
		"ci": "pnpm -w typecheck && pnpm -w lint && pnpm -w build && pnpm -w test && pnpm -w size && pnpm -w depcruise && pnpm -w publint && pnpm -w attw",
		"validate": "pnpm lint && pnpm typecheck && pnpm build && pnpm test && pnpm depcruise && pnpm publint && pnpm attw",
		"prepare": "husky"
	},
	"devDependencies": {
		"@arethetypeswrong/cli": "^0.18.2",
		"@changesets/changelog-github": "^0.5.1",
		"@changesets/cli": "^2.28.0",
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"@eslint/js": "^9.39.1",
		"@size-limit/preset-small-lib": "^11.2.0",
		"@stylistic/eslint-plugin": "^5.4.0",
		"@types/node": "^20.12.12",
		"@typescript-eslint/eslint-plugin": "^8.45.0",
		"@typescript-eslint/parser": "^8.45.0",
		"@vitest/coverage-v8": "^3.2.4",
		"dependency-cruiser": "^17.0.1",
		"eslint": "^9.37.0",
		"eslint-import-resolver-typescript": "^4.4.4",
		"eslint-plugin-import": "^2.31.0",
		"globals": "^16.4.0",
		"husky": "^9.1.7",
		"publint": "^0.3.13",
		"size-limit": "^11.2.0",
		"tsup": "^8.5.0",
		"typescript": "^5.9.3",
		"vitest": "^3.2.4"
	}
}